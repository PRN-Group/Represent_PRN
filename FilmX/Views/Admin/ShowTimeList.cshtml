                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-striped custom-table">
                                <thead>
                                    <tr>
                                        <th style="min-width:200px;">Time</th>
                                        <th>Film Name</th>
                                        <th>Room Name</th>
                                        <th>Type Film</th>
                                        <th class="text-right">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var p in Model)
                                    {
                                        if (@p.IsDeleted == true) continue;
                                        <tr>
                                            <td>
                                                <h2>@p.TimeShow</h2>
                                            </td>
                                            
                                            <td>@p.Film.Name</td>
                                            <td>@p.Room.Name</td>
                                            <td>@p.TypeFilm</td>
                                            <td class="text-right">
                                                <div class="dropdown dropdown-action">
                                                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown"
                                                        aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                                    <div class="dropdown-menu dropdown-menu-right">
                                                        <a  class="dropdown-item" asp-controller="admin" asp-action="editShowTime" asp-route-id="@p.Id">
                                                            <i class="fa fa-pencil m-r-5"></i>
                                                        Edit</a>
                                                       
                                                        <a class="dropdown-item" data-toggle="modal" asp-controller="admin" asp-action="deleteShowTime" asp-route-id="@p.Id">
