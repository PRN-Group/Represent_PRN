@model UserRegistrationDto
@{  
    ViewData["Title"] = "Register";  
    Layout = "~/Views/Shared/_Layout.cshtml";  
}
<div class="container-register">  
    <h1>Register</h1>  
    @Html.ValidationSummary()  
    <form asp-action="Register" asp-controller="Account" method="post">  
  
        <div  class="logindiv">  
            <div>  
                <label asp-for="@Model.FullName" class="col-lg-3 control-label"></label>  
                <br>  
                <div>  
                    @Html.TextBoxFor(m => m.FullName, new { placeholder = "Full Name", @class = "form-control" })  
                    @Html.ValidationMessageFor(m => m.FullName)  
                </div>  
            </div>  
  
  
            <div>  
                <label asp-for="@Model.Email" class="col-lg-3 control-label"></label>  
                <br>  
                <div>  
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })  
                    @Html.ValidationMessageFor(m => m.Email)  
                </div>  
            </div>  
  
            <div>  
                <label asp-for="@Model.PhoneNumber" class="col-lg-3 control-label"></label>  
                <br>  
                <div>  
                    @Html.TextBoxFor(m => m.PhoneNumber, new { placeholder = "Phone Number", @class = "form-control" })  
                    @Html.ValidationMessageFor(m => m.PhoneNumber)  
                </div>  
            </div>  
  
  
            <div>  
                <label asp-for="@Model.Password" class="col-lg-3 control-label"></label>  
                <br>  
                <div>  
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })  
                    @Html.ValidationMessageFor(m => m.Password)  
                </div>  
            </div>  
  
            <div>  
                <label asp-for="@Model.ConfirmPassword"></label>  
                <br>  
                <div>  
                    @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })  
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)  
                </div>  
            </div>  

            <div>  
                <label asp-for="@Model.Gender"></label>  
                <br>  
                <div>  
                    Male: @Html.RadioButtonFor(m=> m.Gender,Gender.Male)
                    &nbsp;
                    FeMale: @Html.RadioButtonFor(m=> m.Gender,Gender.FeMale)  
                </div>  
            </div>  

            <div class="form-group col-sm-12">  
                <label asp-for="@Model.YearOfBirth"></label>  
                <br>  
                <div class="col-lg-9">  
                    @Html.TextBoxFor( m=> m.YearOfBirth,1999) 
                    @Html.ValidationMessageFor(m => m.YearOfBirth)  
                </div>  
            </div>  

            <div class="form-group">  
                <div>  
                    <button type="submit">Sign Up</button>  
                </div>  
            </div>  
        </div>  
    </form>  
</div>